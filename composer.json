{
    "name": "expertsystemsau/transmitsms-php-sdk",
    "description": "TransmitSMS PHP Client Monorepo - Contains both the core PHP client and Laravel integration",
    "keywords": [
        "ExpertSystems",
        "transmitsms",
        "sms",
        "laravel",
        "api-client"
    ],
    "homepage": "https://github.com/expertsystemsau/transmitsms-php-client",
    "license": "MIT",
    "authors": [
        {
            "name": "Mitchell Williams",
            "email": "mitchell@expertsystems.com.au",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.2",
        "saloonphp/laravel-plugin": "^3.0",
        "saloonphp/pagination-plugin": "^2.0",
        "saloonphp/saloon": "^3.0"
    },
    "require-dev": {
        "laravel/pint": "^1.14",
        "nunomaduro/collision": "^8.8",
        "larastan/larastan": "^3.0",
        "orchestra/testbench": "^10.0.0||^9.0.0",
        "pestphp/pest": "^3.0",
        "pestphp/pest-plugin-arch": "^3.0",
        "pestphp/pest-plugin-laravel": "^3.0",
        "phpstan/extension-installer": "^1.4",
        "phpstan/phpstan-deprecation-rules": "^2.0",
        "phpstan/phpstan-phpunit": "^2.0",
        "mockery/mockery": "^1.6"
    },
    "repositories": [
        {
            "type": "path",
            "url": "packages/transmitsms-client",
            "options": {
                "symlink": true
            }
        },
        {
            "type": "path",
            "url": "packages/transmitsms-laravel",
            "options": {
                "symlink": true
            }
        }
    ],
    "autoload": {
        "psr-4": {
            "ExpertSystems\\TransmitSms\\": "packages/transmitsms-client/src/",
            "ExpertSystems\\TransmitSms\\Laravel\\": "packages/transmitsms-laravel/src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ExpertSystems\\TransmitSms\\Tests\\": "tests/",
            "Workbench\\App\\": "workbench/app/"
        }
    },
    "scripts": {
        "post-autoload-dump": "@composer run prepare",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "ExpertSystems\\TransmitSms\\Laravel\\TransmitSmsServiceProvider"
            ],
            "aliases": {
                "TransmitSms": "ExpertSystems\\TransmitSms\\Laravel\\Facades\\TransmitSms"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
